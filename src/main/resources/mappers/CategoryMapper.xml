<?xml version="1.0" encoding="utf-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.estore.dao.CategoryMapper">
	<resultMap type="Category" id="CatRes">
		<id column="f_id" property="id" />
		<result column="f_name" property="name" />
	</resultMap>
	
	<resultMap type="Category" id="CategoryResult">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<association property="fatherCategory" resultMap="CatRes"/>
	</resultMap>
	
	<select id="selectFID" resultMap="CategoryResult">
		select c.id,c.name,a.id
		f_id,a.name f_name from category c,category a
		where a.id = c.father_id
	</select>

	<select id="findByFId" resultType="Category">

	</select>
</mapper>